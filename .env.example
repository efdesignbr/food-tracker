# Database
DATABASE_URL="postgresql://user:password@host:port/database"

# Supabase (para storage de imagens)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
SUPABASE_STORAGE_BUCKET="images"

# Google Gemini AI (RECOMENDADO - ~20x mais barato que Anthropic)
# Obtenha em: https://aistudio.google.com/apikey
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-2.0-flash"

# Anthropic Claude (OPCIONAL - manter como fallback)
ANTHROPIC_API_KEY="your-anthropic-key"
ANTHROPIC_MODEL_DEFAULT="claude-sonnet-4-5-20250929"
ANTHROPIC_MODEL_FALLBACK="claude-3-5-sonnet-20241022"
ANTHROPIC_MAX_TOKENS="1200"

# NextAuth
AUTH_SECRET="your-auth-secret"
NEXTAUTH_SECRET="your-nextauth-secret"

# Upload
MAX_UPLOAD_BYTES="5242880"

# RevenueCat
NEXT_PUBLIC_REVENUECAT_API_KEY="test_xxxxx"

# Dev defaults
DEFAULT_ADMIN_EMAIL="user@foodtracker.local"
DEFAULT_ADMIN_PASSWORD="password123"
DEFAULT_ADMIN_NAME="Food Tracker User"
AUTO_MIGRATE="true"
AUTO_BOOTSTRAP_DEFAULTS="false"
